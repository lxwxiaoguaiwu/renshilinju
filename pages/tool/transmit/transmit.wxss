/* theme content style */
.theme-cont{
  width : 100%;
  background: #F1F3F1;
  margin-top : 20rpx;
  /* margin: 0 auto; */
  background : #fff;
  border:1rpx solid #efefef;
  box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -webkit-box-shadow:0 1rpx 4px rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -moz-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -o-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -ms-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
}
.theme-cont textarea{
  font-size : 34rpx;
  width: 100%;
}
.theme-cont1 image{
  width : 100rpx;
  height : 100rpx;
  padding-left: 15rpx;
  /* padding-bottom: 25rpx;
  padding-top: 50rpx;  */
}
/* next button style */
.btn{
  position: fixed;
  bottom: 0;
  width : 100%;
  height : 100rpx;
  line-height : 100rpx;
  display: flex;
}
.btn view{
  flex: 1;
  padding: 0;
  border-radius: 0;
  text-align: center;
}
.back{
  color: #1aad19;
  background-color: #fff;
}
.go{
  background-color: #1aad19;
  color: #fff;
}
.asset{
