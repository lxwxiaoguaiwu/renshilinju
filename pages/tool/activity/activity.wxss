/* pages/tool/activity/activity.wxss */
page{
  background : #F2F3F2;
}
.wtitle{
  font-size: 28rpx;
  text-align: center;
  margin-top: 30rpx;
  color: #777;
}
.content .theme-c{
  width: 100%;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.theme-title{
  margin-bottom: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size:34rpx;
  padding: 20rpx;
}
.abox input{
  text-align: right;
  padding: 20rpx;
  color: #777;
}
.theme-title input{
  height: 100%;
  line-height: 100rpx;
}
.abox{
  display: flex;
  padding: 5%;
  font-size: 34rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #efefef;
}
.abox .prople{
  padding: 20rpx;
}
.abox .num{
  color: #a9a8a8;
  display: block;
}
.sectionbox{
  display: flex;
}
.fabu{
  width: 250rpx;
  height: 70rpx;
  background-color: #1aad19;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}
/* theme content style */
.theme-cont{
  width : 100%;
  background: #F1F3F1;
  margin-top : 20rpx;
  margin-bottom:20rpx;
  /* margin: 0 auto; */
  background : #fff;
  border:1rpx solid #efefef;
  box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -webkit-box-shadow:0 1rpx 4px rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -moz-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -o-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -ms-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
}
.theme-cont textarea{
  font-size : 34rpx;
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 120rpx;
}
.flex{
  display: flex
}
.asset{
  width: 100rpx;
  height: 100rpx; 
  margin-left: 15rpx;
}
.asset image{
  width: 100%;
  height: auto
}
.theme-cont image{
  width : 100rpx;
  height : 100rpx;
  padding-left: 25rpx;
}
/* next button style */
.btn{
  position: fixed;
  bottom: 0;
  width : 100%;
  height : 100rpx;
  line-height : 100rpx;
  display: flex;
}
.btn view{
  flex: 1;
  padding: 0;
  border-radius: 0;
  text-align: center;
}
.back{
  color: #1aad19;
  background-color: #fff;
}
.go{
  background-color: #1aad19;
  color: #fff;
}