<!--pages/mine/recommend/recommendPosts/recommendPosts.wxml-->
<view class = "content">
  <view class = "success">{{username}}推荐的服务家：</view>
  <view class = "show-theme">
    <view class = "message">姓名：{{name}}</view>
    <view class = "message">电话：{{tel}}</view>
    <view class = "message">备注：{{beizhu}}</view>
     <view class = "message">标签：{{tags}}</view> 
    <view class = "name">{{username}}</view>
    <view class = "time">{{time}}</view>
  </view>
  <view class='btn'>
    <button class='back' type="primary" bindtap = "go">返回首页</button>
    <button class='group' type="primary" open-type="share">发到微信群</button>
  </view>
</view>
