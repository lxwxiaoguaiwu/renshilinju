/* pages/index/community/confirm/confirm.wxss */
.confirm-message{
  font-size : 30rpx;
  padding : 60rpx 30rpx;
}
.button{
  height : 80rpx;
  line-height : 80rpx;
  width : 750rpx;
  position : fixed;
  bottom : 100rpx;
}
.button text{
  display : inline-block;
  width : 370rpx;
  text-align : center;
  background-color : #1aad19;
  color : #fff;
  border : 1rpx solid #eee;
}
.button .back{
  margin-right : 3rpx;
}
.info{
  font-size : 28rpx;
  padding : 50rpx 30rpx;
}
page{
  background : #f4f4f4;
}

.mine-info{
  width: 100%;
  background-color: #f4f4f4;
}
.cbox{
  display: flex;
  align-items: center;
}
.information .cbox image{
  width: 34rpx;
  height: 34rpx;
  padding-left: 15rpx;
}
.infobox{
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  display: flex;
}

.information{
  display: flex;
  align-items: center;
  height: 200rpx;
  justify-content: center;
  margin:0 auto;
}
.information image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}

.say{
  background : #f4f4f4;
  font-size : 46rpx;
  color : #333;
  margin-top : 100rpx;
  padding-left : 20rpx;
}
.choose{
  background : #f4f4f4;
  font-size : 38rpx;
  margin-top : 60rpx;
  padding-left : 50rpx;
  color: #777;
}
.input {
  background : #f4f4f4;
  padding-top : 30rpx;
  width: 100%;
}
.input input {
  width: 100%;
  background-color: #f4f4f4;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx 50rpx;
}

.section {
  padding-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
