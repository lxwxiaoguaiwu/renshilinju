/* pages/personal/myservice/myservice.wxss */
.card{
  display: flex;
  flex-direction: column;
  width: 95%;
  margin: 0 auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.card .title{
  font-size: 30rpx;
  color: #333;
  padding-left: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  
}
.card .name,
.comment,
.time{
  font-size: 24rpx;
}
.card .remarks{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
}
.card .remarks .icon{
  display: flex;
  align-items: center
}
.card .remarks .icon image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.fcard{
  height: auto;
}
.fcard .remarks .icon image{
  width: 100rpx;
  height: 100rpx;
}
.fcard .name{
  font-size: 28rpx
}
.labels{
  display: flex;
}
.labels .label{
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #f4f4f4;
  font-size: 24rpx;
  margin-right: 15rpx;
}
.fcard{
  margin-bottom: 50rpx;
}