/* pages/personal/personal.wxss */
.content{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}
.mine-info{
  width: 100%;
  background-color: #fff;
}
.cbox{
  display: flex;
  align-items: center;
}
.information .cbox image{
  width: 34rpx;
  height: 34rpx;
  padding-left: 15rpx;
}
.infobox{
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  display: flex;
}

.information{
  display: flex;
  align-items: center;
  height: 200rpx;
}
.information image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.content .cbox{
  display: flex;
  width: 90%;
  margin: 0 auto;
  padding: 40rpx 0;
  color: #333;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  justify-content: space-between
}
.content .cbox image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #eee;
  border-right: 2px solid #eee;
  transform: rotate(45deg);
}
.zhinan{
  display: flex;
  align-items: center;
}
.ptitle{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #777;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);  
      -ms-transform: translate(-50%,-50%);  
          transform: translate(-50%,-50%);  
}






