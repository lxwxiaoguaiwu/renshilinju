<!--pages/personal/personal.wxml-->
<view class="mine-info">
  <view class='infobox'>
    <view class="information">
      <image src="{{avatar}}" class="icon"></image>
      <view class="cbox t2">
        {{name}}
        <block wx:if="{{gender==2}}">
          <image src="../images/WechatIMG37.png" class="sex"></image>
        </block>
        <block wx:if="{{gender==1}}">
          <image src="../images/WechatIMG36.png" class="sex"></image>
        </block>
      </view>
    </view>
  </view>
</view>
<view class='content'>
  <view class='cbox t2' bindtap='goMytopic'>
    <view class='zhinan'>
      <image src="../images/personal_huati.png" alt="" />
      <view class=''>我的话题</view>
    </view>
  </view>
  <view class='cbox t2' bindtap='goWinegroup'>
    <view class='zhinan'>
      <image src="../images/personal_weixin.png" alt="" />
      <view class=''>我的社群</view>
    </view>
  </view>
  <view class='cbox t2' bindtap='goChuandi'>
    <view class='zhinan'>
      <image src="../images/personal_chuandi.png" alt="" />
      <view class=''>我的传递</view>
    </view>
  </view>
</view>


